<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/grey_background"
             android:fitsSystemWindows="true"
             tools:ignore="contentDescription">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/login_bg"
    android:scaleType="centerCrop"/>
    <android.support.v7.widget.CardView
        android:id="@+id/authorizations_box"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="center"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_small_16"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_medium_32">
                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:background="@color/color_accent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_very_small_8"
                    android:paddingBottom="@dimen/size_very_small_8"
                    android:fontFamily="@string/ff_medium"
                    android:text="ВОЙТИ"
                    android:textSize="20sp"
                    android:textColor="@color/color_accent"
                    android:textAllCaps="true"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:paddingBottom="@dimen/size_small_24"
                android:paddingLeft="@dimen/size_small_24">
                <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Введите e-mail"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@string/ff_regular"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"/>
            </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Введите пароль"
                        android:inputType="textPassword"
                        android:fontFamily="@string/ff_regular"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/black"
                        android:textSize="14sp"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    style="@style/AppTheme.Button.Red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_small_16"
                    android:minWidth="126dp"
                    android:text="ВОЙТИ"
                    android:textAllCaps="true"
                    android:theme="@style/AppTheme.Button.Red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_small_16"
                    android:fontFamily="@string/ff_regular"
                    android:text="Забыли пароль?"
                    android:textColor="@color/grey"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>