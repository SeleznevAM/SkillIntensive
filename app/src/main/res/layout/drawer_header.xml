<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@drawable/i"
                android:paddingLeft="@dimen/size_small_16"
                android:paddingRight="@dimen/size_small_16"
                android:paddingTop="@dimen/size_small_24">

    <ImageView
        android:id="@+id/user_avatar_img"
        android:layout_width="@dimen/avatar_size_60"
        android:layout_height="@dimen/avatar_size_60"
        android:layout_marginTop="@dimen/size_small_24"
        android:background="@color/color_accent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/user_mail_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="samoubica@post.ru"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

    </LinearLayout>

</RelativeLayout>